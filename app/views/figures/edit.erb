<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <br></br>

  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

  <br></br>


  <label>Choose an existing title:</label>
  <br></br>

  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <%=title.name%>
  <%end%>


  <label>and/or, create a new title:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" id="new_title" name="title[name]" ></input>
  <br></br>

  <!-- <input type="text" name="figure[title_ids]"> -->

  <label>Choose an existing landmark:</label>
  <br></br>
  
    <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>


  <label>and/or, create a new landmark:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" id="new_landmark" name="landmark[name]" ></input>
  <br></br>


  <input type="submit" value="Edit Figure">

</form>

